<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema normal de la app (XML) -->
    <style name="Theme.AppAeropost" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Opcional: decoración del sistema -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Tema de SplashScreen -->
    <style name="Theme.Aeropost.Splash" parent="Theme.SplashScreen">
        <!-- Fondo del splash -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Ícono del splash (asegúrate que exista en res/drawable) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon1</item>

        <!-- (Opcional) fondo del ícono -->
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_icon_bg</item>

        <!-- Tema que se aplica DESPUÉS del splash (debe existir en XML) -->
        <item name="postSplashScreenTheme">@style/Theme.AppAeropost</item>
    </style>

</resources>
